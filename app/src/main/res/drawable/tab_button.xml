<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false" android:state_enabled="true">
        <shape >
            <solid android:color="#DDDDDD"/>
        </shape>
    </item>
    <item android:state_selected="true" android:state_enabled="true">
        <inset android:insetLeft="-5dp"
            android:insetTop="-5dp"
            android:insetRight="-5dp">
            <shape>
                <stroke android:width="5dp" android:color="@color/theme_color"/>
                <solid android:color="#FFFFFF" />
            </shape>
        </inset>
    </item>
</selector>