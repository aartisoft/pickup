<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udiboy.commonpath.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Start"
        android:id="@+id/field_start"
        android:layout_alignParentLeft="true"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter destination"
        android:id="@+id/field_end"
        android:layout_toRightOf="@id/field_start"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/list_start"
        android:layout_below="@id/field_start"/>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/list_end"
        android:layout_below="@id/field_end"
        android:layout_toRightOf="@id/list_start"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="Search"
        android:id="@+id/button_search"
        android:onClick="search"
        android:layout_alignParentBottom="true" />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="get directions"
        android:id="@+id/button_getdir"
        android:onClick="showDirections"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button_search"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:text="Chat"
        android:id="@+id/button_chat"
        android:onClick="openChat"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button_getdir"/>


</RelativeLayout>
