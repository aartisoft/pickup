<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udiboy.commonpath.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_select"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I&apos;m at :"
            android:id="@+id/label_start"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/field_start"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Going to:"
            android:id="@+id/label_end"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/field_end"
            android:textSize="20dp" />

        <cab.pickup.ui.widget.LocationSearchBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_start"
            android:layout_alignParentTop="true"
            android:id="@+id/field_start"
            style="@style/LocationSearchBar"
            android:layout_alignLeft="@+id/field_end"
            android:layout_marginLeft="0dp" />
        <cab.pickup.ui.widget.LocationSearchBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/field_start"
            android:layout_toRightOf="@id/label_end"
            android:id="@+id/field_end"
            style="@style/LocationSearchBar"/>
    </RelativeLayout>


    <fragment
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@+id/location_select"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_select"
        android:layout_below="@+id/map"
        android:visibility="visible">
        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leave_time"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/option_time">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 mins"
                android:id="@+id/time_15"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 mins"
                android:id="@+id/time_30"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 mins"
                android:id="@+id/time_45"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave In:"
            android:id="@+id/leave_time"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_summary"
        android:layout_below="@+id/time_select"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/journey_description"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance :"
            android:layout_toLeftOf="@+id/field_distance"
            android:layout_alignTop="@+id/field_distance"
            android:layout_alignBottom="@+id/field_distance"
            android:id="@+id/label_distance"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost :"
            android:layout_toLeftOf="@+id/field_cost"
            android:layout_alignTop="@+id/field_cost"
            android:layout_alignBottom="@+id/field_cost"
            android:id="@+id/label_cost"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/field_distance"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/field_cost"
            android:layout_below="@+id/field_distance"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/button_register"
        android:layout_below="@+id/order_summary" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_user_match">

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:onClick="addJourney"
        android:id="@+id/button_register"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="next"
        android:id="@+id/button_next"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_register"/>

</RelativeLayout>
