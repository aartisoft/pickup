<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.udiboy.commonpath.SettingsActivity">
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView android:text="Name:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:inputType="textPersonName"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView android:text="Email:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_email"
        android:inputType="textEmailAddress"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView android:text="Company:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_company"/>
    <TextView android:text="Company Email Address:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_company_email"/>
    <TextView android:text="Mobile number:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_number"
        android:inputType="phone" />
    <TextView android:text="Age:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_age"
        android:inputType="number"/>

    <TextView android:text="Gender:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_gender"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView android:text="Home location:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <cab.pickup.widget.LocationSearchBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/LocationSearchBar"
        android:id="@+id/profile_home"/>
    <TextView android:text="Office location:" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <cab.pickup.widget.LocationSearchBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/LocationSearchBar"
        android:id="@+id/profile_office"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="save"/>

</LinearLayout>
</ScrollView>