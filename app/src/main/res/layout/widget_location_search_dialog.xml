<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_search_dialog_edittext"
        android:hint="Type here to search"
        android:textColor="@color/text_color_dark"
        android:layout_alignBottom="@+id/location_search_dialog_myloc"
        android:paddingRight="50dp"
        android:layout_alignParentTop="true" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:id="@+id/location_search_dialog_myloc"
        android:src="@drawable/locator"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:layout_alignParentEnd="true"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_search_dialog_list"
        android:layout_below="@+id/location_search_dialog_edittext" />
</RelativeLayout>