<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_color">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="22dp"
                        android:src="@drawable/circle"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="22dp"
                        android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="22dp"
                        android:src="@drawable/balloon"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="15"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/field_start"
                        android:background="@color/theme_color"
                        android:hint="@string/pickup_location"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/text_color_light"
                        android:textColorHint="@color/text_color_light"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/text_color_light"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/field_end"
                        android:background="@color/theme_color"
                        android:hint="@string/drop_location"
                        android:padding="12dp"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/text_color_light"
                        android:textColorHint="@color/text_color_light"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_color_dark">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/car"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:text="Booked at 5:00 PM"
                    android:id="@+id/book_time"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/text_color_light"
                />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="26 Km"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:gravity="start|center_vertical"
                    android:textColor="@color/text_color_light"
                />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:visibility="invisible"
                    android:layout_alignParentTop="true"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:id="@+id/eventView"
                    android:paddingTop="15dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@color/light_gray">

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="4dp"
                        android:id="@+id/driver_and_mates_card"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                       >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/card_head">
                                <ToggleButton
                                    android:background="@drawable/tab_button"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textOn="Driver"
                                    android:textOff="Driver"
                                    android:id="@+id/tab_driver"
                                    android:checked="true"/>
                                <ToggleButton
                                    android:background="@drawable/tab_button"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textOn="Mates"
                                    android:textOff="Mates"
                                    android:id="@+id/tab_mates"
                                    />
                            </LinearLayout>


                            <ListView
                                android:layout_width="240dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/summary_user_list"
                                android:layout_below="@+id/card_head"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Searching for mates..."
                                android:textSize="20sp"
                                android:textColor="#999999"
                                android:id="@+id/mates_empty_notif"
                                android:layout_alignTop="@+id/summary_user_list" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/driver_and_mates_card"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:id="@+id/event_here_text"
                        android:text="Real time events will be shown here"/>

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:id="@+id/event_box"/>


                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:clickable="true"
            android:src="@drawable/map"
            app:borderWidth="0dp"
            android:layout_above="@id/button_confirm"
            app:backgroundTint="@color/theme_color"
            android:onClick="toggleMap"
            android:layout_alignParentRight="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@color/theme_color"
            android:textColor="@color/text_color_light"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_confirm"
            android:onClick="cancel"/>

    </RelativeLayout>



    <cab.pickup.ui.widget.SideBarMenu
        android:layout_width="250dp "
        android:id="@+id/navList"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_gravity="start"
        android:background="#ffeeeeee">

    </cab.pickup.ui.widget.SideBarMenu>


</android.support.v4.widget.DrawerLayout>
