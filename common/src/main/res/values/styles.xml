<resources>
    <style name="Text">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="Text.Light" parent="Text">
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="Text.Large" parent="Text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Text.Light.Large" parent="Text.Light">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Light.Small" parent="Text.Light">
        <item name="android:textSize">11sp</item>
    </style>

</resources>
