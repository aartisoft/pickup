<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="LocationSearchBar">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">#DDDDDD</item>
        <item name="android:textColor">@color/text_color_dark</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:background">@drawable/button_back</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/theme_color</item>
    </style>


    <style name="Label">
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@color/theme_color_light</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

</resources>
